<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wifiranger_backdrop1"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:text="00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.718"
            android:id="@+id/txtDistance" android:textSize="64sp" tools:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.528" android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>
    <TextView
            android:text="DISTANCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDistView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.534"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/txtDistance"
            android:layout_marginBottom="164dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Switch
            android:text="Visually Impaired Athlete      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pubSwitch" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            android:layout_marginTop="275dp" app:layout_constraintTop_toTopOf="parent"/>
    <Switch
            android:text="Guide     "
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/subSwitch" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            android:layout_marginTop="236dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.508"/>
    <Switch
            android:text="Audible Feedback      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audioSwitch" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintHorizontal_bias="0.508" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/pubSwitch"/>
    <Switch
            android:text="Smart Glasses      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glassesSwitch" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/audioSwitch"/>
    <Switch
            android:text="Debug      "
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/debugSwitch" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/glassesSwitch"
            android:checked="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pubStatus"
            app:layout_constraintStart_toEndOf="@+id/pubSwitch" android:layout_marginStart="16dp"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent" android:text="Status"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audibleStatus"
            android:text="Status"
            app:layout_constraintStart_toEndOf="@+id/audioSwitch" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/pubStatus"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glassesStatus"
            android:text="Status"
            app:layout_constraintStart_toEndOf="@+id/glassesSwitch" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/audibleStatus"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/debugStatus"
            android:text="Status"
            app:layout_constraintStart_toEndOf="@+id/debugSwitch" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/glassesStatus"/>
    <TextView
            android:text="m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textUnit" app:layout_constraintStart_toEndOf="@+id/txtDistance"
            android:layout_marginBottom="188dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="36sp"/>

</android.support.constraint.ConstraintLayout>